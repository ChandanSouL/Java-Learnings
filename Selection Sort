import java.util.*;
public class Main {
    public static void main(String args[]){
         int arr[]= {7,8,3,1,2};
         //selection sort
        for(int i=0;i<arr.length-1;i++){
            int smallest = i;
            for(int j=i+1;j<arr.length;j++){
                if(arr[smallest] > arr[j]){
                    smallest = j;
                }
            }
            int temp = arr[smallest];
            arr[smallest] = arr[i];
            arr[i] = temp;
        }
        for(int i=0;i<arr.length;i++){
            System.out.println(arr[i]);
        }
    }
}
//selects first element and compare with all other elemets in the array 
//swaps for the smallest element 
//repeat the process with next element doesnt consider first element because we have already sorted that that why we initialise j=i+1
//time complexity is O(n^2)
